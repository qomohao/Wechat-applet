/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.menu-box{
  width: 100%;
  padding: 20rpx 0;
}
.menu-box .menu-item{
  box-sizing: border-box;
  width: 46%;
  padding: 20rpx;
  border-radius: 15rpx;
  overflow: hidden;
  height: 220rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: 10rpx 0;
  color:#fff;
  background-image: linear-gradient(120deg, #89f7fe 0%, #66a6ff 100%);  
}
 